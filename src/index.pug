      section.l-about
        .container
          .row
            .col-12
              .l-about__title-section(data-aos="fade-up")
                h2.u-title-section ABOUT
                  span.u-subtitle-section MEGAPORT FESTIVAL

        .container-fluid.l-about__container
          .row
            .col-md-7.order-md-1.order-2(data-aos="fade-right")
