                    .l-lineup__img-mask.js-parallax(data-scalar-y="0" data-friction-x="0.4")
                      .l-lineup__glitch-wrap.--primary(data-depth="-0.2")
                        img(src="img/lineup/lineup02.jpg", alt="大港開唱藝人名單")
                      .l-lineup__glitch-wrap.--secondary(data-depth="0.2")
                        img(src="img/lineup/lineup02.jpg", alt="大港開唱藝人名單")
                      .l-lineup__img-main
                        img(src="img/lineup/lineup02.jpg", alt="大港開唱藝人名單")

              .col-lg-4.col-sm-7.l-lineup__wrap(data-depth="-0.2")
                article.l-lineup__artist.--artist03(data-aos="fade-up")
                  a(href="##")
                    h3.u-title.--lg.l-lineup__title.--title03 Beyound Cure
                    .l-lineup__img-mask.js-parallax(data-scalar-y="0" data-friction-x="0.4")
                      .l-lineup__glitch-wrap.--primary(data-depth="-0.2")
                        img(src="img/lineup/lineup03.jpg", alt="大港開唱藝人名單")
                      .l-lineup__glitch-wrap.--secondary(data-depth="0.2")
                        img(src="img/lineup/lineup03.jpg", alt="大港開唱藝人名單")
                      .l-lineup__img-main
                        img(src="img/lineup/lineup03.jpg", alt="大港開唱藝人名單")
                        
              .col-lg-4.col-sm-5.l-lineup__wrap(data-depth="0.2")
                article.l-lineup__artist.--artist04(data-aos="fade-up")
                  a(href="##")
                    h3.u-title.--lg.l-lineup__title.--title04 Dudu King
                    .l-lineup__img-mask.js-parallax(data-scalar-y="0" data-friction-x="0.4")
                      .l-lineup__glitch-wrap.--primary(data-depth="-0.2")
                        img(src="img/lineup/lineup04.jpg", alt="大港開唱藝人名單")
                      .l-lineup__glitch-wrap.--secondary(data-depth="0.2")
                        img(src="img/lineup/lineup04.jpg", alt="大港開唱藝人名單")
                      .l-lineup__img-main
                        img(src="img/lineup/lineup04.jpg", alt="大港開唱藝人名單")

              .col-lg-4.col-sm-5.offset-lg-0.offset-sm-5.l-lineup__wrap(data-depth="-0.1")
