                article.l-lineup__artist.--artist01(data-aos="fade-up")
                  a(href="##")
                    h3.u-title.--lg.l-lineup__title.--title01 9m88
                    //- scalar(10) 設置加速度 / friction(0-1) 設置過渡
                    .l-lineup__img-mask.js-parallax(data-scalar-y="0" data-friction-x="0.4")
                      .l-lineup__glitch-wrap.--primary(data-depth="-0.2")
                        img(src="img/lineup/lineup01.jpg", alt="大港開唱藝人名單")
                      .l-lineup__glitch-wrap.--secondary(data-depth="0.2")
                        img(src="img/lineup/lineup01.jpg", alt="大港開唱藝人名單")
                      .l-lineup__img-main
                        img(src="img/lineup/lineup01.jpg", alt="大港開唱藝人名單")

              .col-md-7.l-lineup__wrap(data-depth="-0.1")
                article.l-lineup__artist.--artist02(data-aos="fade-up")
